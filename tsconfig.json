{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "nuxt.config.ts",
    "components/**/*.vue",
    "pages/**/*.vue",
    "layouts/**/*.vue",
    "plugins/**/*.ts",
    "plugins/**/*.js"
  ]
}